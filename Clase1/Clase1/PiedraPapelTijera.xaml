<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Clase1.PiedraPapelTijera">
    <ContentPage.Content>

        <StackLayout Padding="20">
            <StackLayout Orientation="Horizontal" BackgroundColor="Aqua">
                <Button Text="Piedra" Clicked="Button_Clicked" HorizontalOptions="Start"
                        WidthRequest="65" FontSize="10"/>
                <Button Text="Papel" Clicked="Button_Clicked" HorizontalOptions="Center"
                        WidthRequest="65" FontSize="10"/>
                <Button Text="Tijera" Clicked="Button_Clicked" HorizontalOptions="End"
                        WidthRequest="65" FontSize="10"/>
            </StackLayout>

            <Label Text="Puntaje Jugador:"></Label>
            <Label x:Name="LabelPuntajeJugador" Text="0"/>
            <Label Text="Puntaje Computadora:"></Label>
            <Label x:Name="LabelPuntajeComputadora" Text="0"/>

        </StackLayout>

    </ContentPage.Content>

</ContentPage>
