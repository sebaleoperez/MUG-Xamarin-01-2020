<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Clase1.PiedraPapelTijeraGrid">
    <ContentPage.Content>

        <Grid>

            <Label Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="0" Text="TITULO" HorizontalOptions="CenterAndExpand" />

            <Button Text="Piedra" Clicked="Button_Clicked" Grid.Row="1" Grid.Column="0" />
            <Button Text="Papel" Clicked="Button_Clicked" Grid.Row="1" Grid.Column="1" />
            <Button Text="Tijera" Clicked="Button_Clicked" Grid.Row="1" Grid.Column="2" />

            <Label Text="Puntaje Jugador:" Grid.Row="2" Grid.Column="1"></Label>
            <Label x:Name="LabelPuntajeJugador" Text="0" Grid.Row="3" Grid.Column="1"/>
            <Label Text="Puntaje Computadora:" Grid.Row="4" Grid.Column="1"></Label>
            <Label x:Name="LabelPuntajeComputadora" Text="0" Grid.Row="5" Grid.Column="1"/>

        </Grid>

    </ContentPage.Content>
</ContentPage>
