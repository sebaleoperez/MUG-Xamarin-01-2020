<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Clase1.EjemploGrid">
    <ContentPage.Content>

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <Label Text="Hola" Grid.Row="0" Grid.Column="0" />

            <BoxView BackgroundColor="Blue" Grid.Column="1" Grid.Row="0"/>

            <BoxView BackgroundColor="Red" Grid.Column="1" Grid.Row="8" />

        </Grid>


    </ContentPage.Content>
</ContentPage>
